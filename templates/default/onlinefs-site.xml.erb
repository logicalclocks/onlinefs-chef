<?xml version="1.0" encoding="UTF-8"?>
<onlinefs>
  <service>
    <threadNumber><%= node['onlinefs']['service']['thread_number'] %></threadNumber>
  </service>

  <rondb>
    <connectionString><%= @mgm_fqdn %>:<%= node['ndb']['mgmd']['port'] %></connectionString>
    <batchSize>300</batchSize>
  </rondb>

  <kafka>
    <bootstrapServers><%= @kafka_fqdn %>:<%= node['kkafka']['broker']['port'] %></bootstrapServers>
    <trustStoreLocation>/certs/onlinefs__tstore.jks</trustStoreLocation>
    <keyStoreLocation>/certs/onlinefs__kstore.jks</keyStoreLocation>
    <keyLocation>/certs/onlinefs__passwd</keyLocation>
  </kafka>

  <hopsworks>
    <tokenLocation>/onlinefs/etc/token</tokenLocation>
  </hopsworks>

</onlinefs>
